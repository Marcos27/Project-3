<!DOCTYPE html>
<html>
<head>
  <$- include('../partials/head') $>
</head>
<body>
<$- include('../partials/navbar') $>

<div class="center-align container">

    <div class="section">
      <h5>YAY!</h5>
      <$ game.photos.forEach(photo => { $>
        <$ if (photo.result == true) { $>
          <div class="row">
            <div class="col s12 m8 push-m2">
              <div class="card">
                <div class="card-image">
                  <img src="<$= photo.url $>">
                </div>
                <div class="card-content">
                  <div>
                    <span class="card-title"><$= game.instructions[photo.instruction_index].task $></span>
                  </div>
                  <div>

                  </div>
                </div>
              </div>
            </div>
          </div>
        <$ } $>
      <$ }) $>
    </div>

    <div class="section">
      <h5>SHAME!</h5>
      <$ game.photos.forEach(photo => { $>
        <$ if (photo.result == false) { $>
          <div class="row">
            <div class="col s12 m8 push-m2">
              <div class="card deep-orange">
                <div class="card-image">
                  <img src="<$= photo.url $>">
                </div>
                <div class="card-content">
                  <div>
                    <span class="card-title"><$= game.instructions[photo.instruction_index].task $></span>
                  </div>
                  <div>

                  </div>
                </div>
              </div>
            </div>
          </div>
        <$ } $>
      <$ }) $>
    </div>



</div>

<$- include('../partials/playerScript') $>
</body>
</html>













