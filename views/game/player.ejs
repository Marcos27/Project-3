<!DOCTYPE html>
<html>
<head>
  <$- include('../partials/head') $>
</head>
<body class="center-align" >
  <$- include('../partials/navbar') $>
<div class="container">
   <!-- This when player waiting for game to start -->
    <div class="card">
      <div class="chip">
        <img src="<$= user.imageUrl $>" alt="Contact Person">
        <$= user.firstName $>
      </div>

<!--  <!-- This is when game has already started -->

  <br>
  <br>
  <br>
  <br>

  <div class="row">
    <div class="col s12">
      <label for="">Submit A Photo</label>
      <input id="photo-url" type="text" placeholder="Add a photo url">
      <button id="submit-photo" class="btn"  onclick="addPhoto('<$= game.id $>')">Submit</button>
    </div>
  </div>


  <div class="secret-code-container">
    <p>Your secret code is <span id="game-id"><$= game._id $></span></p>
  </div>

    <div class="divider"></div>
      <$ if(!game.start_time) { $>
        <div class="section">
        <h5>waiting for game to start</h5>
        <div class="progress">
            <div class="indeterminate"></div>
        </div>
      <$ } else { $>
          <div class="section" id="current">
          </div>
          <div class="divider"></div>
            <div class="section" id="upcoming">
              <h5>Upcoming Tasks</h5>
              <div id="upcoming-container">
            </div>
          <div class="divider"></div>
          <div class="section" id="completed">
            <h5>Completed Tasks</h5>
            <div id="acccepted-picture">

          </div>
         </div>
        <$ } $>
          <div class="divider"></div>
            <div class="section" id="players">
              <h5>Players</h5>
                <div class="card">
                <$ players.forEach(player => { $>
                  <div class="chip">
                    <img src="<$= player.imageUrl $>" alt="Contact Person">
                    <$= player.firstName $>
                  </div>
                <$ }) $>
                </div>
            </div>
            <div class="right-corner">
              <a href="/users/leavegame" title="leave game">Leave Game</a>
            </div>
        </div>
          <!-- </div>
      </div> -->
  <$- include('../partials/playerScript') $>
</body>
</html>








